{% extends "global/admin/panel-list.twig" %}

{% block header %}
    <h1>Web Page List</h1>
{% endblock %}

{% block buttons %}
    <a class="btn btn-danger" href="#">
        <i class="glyphicon glyphicon-remove"></i>
        刪除
    </a>
{% endblock %}

{% block content %}
    <table class="table table-striped">
    <table class="table table-striped">
        <thead>
        <tr>
            <th class="text-center"><input type="checkbox" /></th>
            <th class="text-center">網址</th>
            <th class="text-center">引擎</th>
            <th class="text-center">統計</th>
            <th class="text-center">ID</th>
        </tr>
        </thead>
        <tbody>
        {% set i = 0 %}

        {% for url in helper.webo.getUrls %}

            {% for engine in helper.webo.getEngines() %}
            <tr>
                <td class="text-center">
                    <input type="checkbox" />
                </td>

                <td>
                    <a href="edit">{{ url }}</a>
                </td>

                <td class="text-center">
                    {{ engine }}
                </td>

                <td class="text-center">
                    {% set num = random(100000) + 10000 %}
                    {{ num|number_format }}
                </td>

                <td class="text-center">
                    {{ i + 100548 }}
                </td>
            </tr>
                {% set i = i + 1 %}
            {% endfor %}

        {% endfor %}
        </tbody>

        <tfoot>
        <tr>
            <td class="text-center" colspan="10">
                {% include "global/blocks/pagination.twig" %}
            </td>
        </tr>
        </tfoot>
    </table>
{% endblock %}