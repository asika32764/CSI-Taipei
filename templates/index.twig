{% extends '_index.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-2">
            <form action="index.php/result/index" class="form-horizontal">
                
                <fieldset>
                    <legend>請輸入檢索字串</legend>
                    
                    <!--Chinese Name-->
                    <div class="form-group ">
                        <label for="chineseName" class="col-lg-4 control-label">
                            Chinese Name
                        </label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" id="chineseName" placeholder="姓名">
                        </div>
                    </div>
                    
                    <!--English Name-->
                    <div id="eng-name-form" class="form-group">
                        <label for="engNameFirst" class="col-lg-4 control-label">
                            English Name
                        </label>
                        <div class="col-lg-8">
                            <div class="row">
                                <span class="col-lg-6">
                                    <input type="text" class="form-control" id="engNameFirst" placeholder="First Name">
                                </span>
                                <span class="col-lg-6">
                                    <input type="text" class="form-control" id="engNameLast" placeholder="Last Name">
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10 ">
                            <button type="submit" class="btn btn-primary pull-right">Sign in</button>
                        </div>
                    </div>
                    
                </fieldset>
                
                <fieldset>
                    <legend>請選擇檢索項目</legend>
                    
                    {% set databases = helper.database.getDatabases() %}
                    
                    {% for db in databases %}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> {{ db }}
                        </label>
                    </div>
                    {% endfor %}
                    
                </fieldset>
                
                <fieldset>
                    <legend>個人網站網址</legend>
                    <input type="text" class="col-lg-12 form-control">
                </fieldset>
                
            </form>
        </div>
    </div>
</div>    
{% endblock %}